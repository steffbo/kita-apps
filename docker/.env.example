# Production Environment Variables
# Copy to .env and fill in your values

# ===========================================
# Database
# ===========================================
DB_NAME=kita
DB_USER=kita
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ===========================================
# Authentication
# ===========================================
# JWT Secret (generate with: openssl rand -base64 64)
JWT_SECRET=CHANGE_ME_GENERATE_A_SECURE_SECRET

# ===========================================
# Mail (SMTP)
# ===========================================
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=noreply@knirpsenstadt.de
MAIL_PASSWORD=CHANGE_ME_MAIL_PASSWORD

# ===========================================
# Domains (customize for your deployment)
# ===========================================
DOMAIN_BASE=knirpsenstadt.de
DOMAIN_PLAN=plan.knirpsenstadt.de
DOMAIN_ZEIT=zeit.knirpsenstadt.de
DOMAIN_BEITRAEGE=beitraege.knirpsenstadt.de
DOMAIN_API=api.knirpsenstadt.de
DOMAIN_API_FEES=api-fees.knirpsenstadt.de

# ===========================================
# GitHub Container Registry (for docker-compose.ghcr.yml)
# ===========================================
# Your GitHub username
GITHUB_USER=steffbo
# Personal Access Token with read:packages scope
# Create at: https://github.com/settings/tokens/new?scopes=read:packages
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===========================================
# Image Tags (optional, defaults to latest)
# ===========================================
# IMAGE_TAG=latest
# IMAGE_TAG=sha-abc1234
