# Production Environment Variables
# Copy to .env and fill in your values

# ===========================================
# Database
# ===========================================
DB_NAME=kita
DB_USER=kita
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ===========================================
# Authentication
# ===========================================
# JWT Secret (generate with: openssl rand -base64 64)
JWT_SECRET=CHANGE_ME_GENERATE_A_SECURE_SECRET

# ===========================================
# Mail (SMTP)
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_FROM=noreply@knirpsenstadt.de
SMTP_USERNAME=noreply@knirpsenstadt.de
SMTP_PASSWORD=CHANGE_ME_MAIL_PASSWORD
SMTP_USE_TLS=true

# ===========================================
# Domains (customize for your deployment)
# ===========================================
DOMAIN_BASE=knirpsenstadt.de
DOMAIN_PLAN=plan.knirpsenstadt.de
DOMAIN_ZEIT=zeit.knirpsenstadt.de
DOMAIN_BEITRAEGE=beitraege.knirpsenstadt.de
DOMAIN_API=api.knirpsenstadt.de
DOMAIN_API_FEES=api-fees.knirpsenstadt.de

# Base URLs for password reset links (used in emails)
APP_BASE_URL_PLAN=https://plan.knirpsenstadt.de
APP_BASE_URL_BEITRAEGE=https://beitraege.knirpsenstadt.de

# ===========================================
# Image Configuration (optional)
# ===========================================
# GitHub username (for image paths)
GITHUB_USER=steffbo
# Image tag (defaults to latest)
# IMAGE_TAG=latest
# IMAGE_TAG=sha-abc1234
