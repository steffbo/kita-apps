# Build stage
FROM oven/bun:1 AS build
WORKDIR /build

ARG VITE_API_URL
ARG VITE_BASE_PATH=/
ENV VITE_API_URL=${VITE_API_URL}
ENV VITE_BASE_PATH=${VITE_BASE_PATH}

# Copy openapi specs first (needed for type generation)
COPY openapi /build/openapi

# Set up frontend workspace
WORKDIR /build/frontend

# Copy all package.json files for workspace resolution
COPY frontend/package.json frontend/bun.lockb* ./
COPY frontend/packages/shared/package.json ./packages/shared/
COPY frontend/apps/beitraege/package.json ./apps/beitraege/
COPY frontend/apps/dienstplan/package.json ./apps/dienstplan/
COPY frontend/apps/zeiterfassung/package.json ./apps/zeiterfassung/

# Install dependencies
RUN bun install --frozen-lockfile

# Copy source for shared and the target app only
COPY frontend/packages ./packages
COPY frontend/apps/beitraege ./apps/beitraege

# Generate API types and build (skip vue-tsc type checking in Docker, vite handles the build)
RUN bun run --filter @kita/shared generate:api || true
RUN cd apps/beitraege && bun run vite build

# Production stage
FROM nginx:alpine
COPY --from=build /build/frontend/apps/beitraege/dist /usr/share/nginx/html

# Custom nginx config for SPA
RUN echo 'server { \
    listen 80; \
    root /usr/share/nginx/html; \
    index index.html; \
    location / { \
        try_files $uri $uri/ /index.html; \
    } \
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2)$ { \
        expires 1y; \
        add_header Cache-Control "public, immutable"; \
    } \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
