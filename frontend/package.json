{
  "name": "kita-frontend",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:plan": "bun run --filter @kita/dienstplan dev",
    "dev:zeit": "bun run --filter @kita/zeiterfassung dev",
    "dev:beitraege": "bun run --filter @kita/beitraege dev",
    "dev": "bun run --filter '@kita/*' dev",
    "build": "bun run --filter '@kita/*' build",
    "build:plan": "bun run --filter @kita/dienstplan build",
    "build:zeit": "bun run --filter @kita/zeiterfassung build",
    "build:beitraege": "bun run --filter @kita/beitraege build",
    "lint": "bun run --filter '@kita/*' lint",
    "generate:api": "bun run --filter @kita/shared generate:api",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:plan": "playwright test --project=dienstplan",
    "test:zeit": "playwright test --project=zeiterfassung",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "1.57.0",
    "playwright": "1.57.0",
    "typescript": "~5.6.0"
  }
}
